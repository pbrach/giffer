{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "outDir": "${configDir}/dist",
    "composite": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"],
  "files": []
}
